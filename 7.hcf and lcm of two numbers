#include<stdio.h>
#include<conio.h>
int main()
{
int a,b,x,y,t,hcf,lcm;
printf("enter two numbers");
scanf("%d%d",&x,&y);
a=x;                                 //a=10
b=y;                                 //b=50
while (b != 0)  //while 50!=0
{
t=b;                                 //t=50
b=a%b;                               //50=10%50  =0
a=t;                                 //a=50
}
hcf=a;                               //since b=0 so hcf =10
lcm=(x*y)/hcf;                       //500/10 =50
printf("the hcf of %d and %d is %d",x,y,hcf);
printf("the lcm of %d and %d is %d",x,y,lcm);
getch();
}
